{
	"plugins": {
		"release-it-pnpm": {
			"disableRelease": true,
			"inFile": "CHANGELOG.md",
			"publishCommand": "vsce publish --no-dependencies"
		}
	},
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}"
	},
	"github": {
		"release": true,
		"draft": true
	}
}
