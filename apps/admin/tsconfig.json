{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node", "vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [".", "./.react-router/types"],

		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,

		"skipLibCheck": true,
		"strict": true,

		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"],
			"@/*": ["./app/*"],
			"@env/*": ["./app/env.ts"],
			"@pkg": ["./package.json"]
		}
	},
	"include": [
		"**/*",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*",
		"scripts"
	]
}
